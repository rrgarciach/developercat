    <!-- Contact form -->
    <div id="contact" class="section white board">
        <div class="row container">
            <div class="col s12">
				<h4 class="header">Let's Talk About Your Next Project!</h4>
                <div class="card horizontal">
                    <div class="card-image hide-on-small-only">
						<div id="form-image"></div>
                    </div>
                    <div class="card-stacked">
                        <div class="card-content">
                            <div class="card-title"></div>
                            <div class="row">
                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            <input id="name" type="text" class="validate">
                                            <label for="name">Name</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">business</i>
                                            <input id="company" type="text" class="validate">
                                            <label for="company">Company</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">mail</i>
                                            <input id="email" type="email" class="validate">
                                            <label for="email">Email</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">call</i>
                                            <input id="phone" type="tel" class="validate">
                                            <label for="phone">Phone</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">subject</i>
                                            <input id="subject" type="email" class="validate">
                                            <label for="subject">Subject</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">message</i>
                                            <textarea id="message" class="materialize-textarea"></textarea>
                                            <label for="message">Message</label>
                                        </div>
                                    </div>
									<div class="row">
										<div class="col offset-s6">
                                        	<a class="waves-effect waves-light btn"><i class="material-icons right">send</i>submit</a>
										</div>
									</div>
                                </form>
								
                            </div>
